$(document).ready(function()
{
    // WYBÃ“R PAZNOKCIA
    
    var active = null;
    
    $('.finger').css( 'cursor', 'pointer' );
    $('.finger').click(function(e)
    {
      if(active)
      {
        if(active.attr("id") == $(this).attr("id"))
        {
          active.find('.marker').animate({opacity: 0.0}, 700);
          active = null;
        }
        else
        {
          active.find('.marker').animate({opacity: 0.0}, 700);
          active = $(this);
          active.find('.marker').animate({opacity: 1.0}, 700);
        }
      }
      else
      {
        active = $(this);
        active.find('.marker').animate({opacity: 1.0}, 700);
      }
    });
    
    // MENU
    
    var submenu = null;
    
    $('#menu .button').click(function(e)
    {
      var buttonid = $(this).attr("id");
      
      if(submenu)
      {
        if(submenu.attr("id") == buttonid)
        {
          submenu.css('opacity', '0.0');
          submenu.css('display', 'none');
          submenu = null;
        }
        else
        {
          submenu.css('opacity', '0.0');
          submenu.css('display', 'none');
          submenu = $("#"+buttonid+".submenu");
          submenu.css('display', 'block');
          submenu.animate({opacity: 1.0}, 700);
        }
      }
      else
      {
        submenu = $("#"+buttonid+".submenu");
        submenu.css('display', 'block');
        submenu.animate({opacity: 1.0}, 700);
      }
    });
    
    // SUBMENU
    
    $('.submenu .nail').click(function(e)
    {
        if(active)
        {
          color = $(this).css('background-color');
          active.find('.nail').css('background-color', color);
        }
    });
    
    $('.submenu .french').click(function(e)
    {
        if(active)
        {
          color = $(this).css('background-color');
          active.find('.french').css('background-color', color);
        }
    });
    
    $('.submenu .pattern').click(function(e)
    {
        if(active)
        {
          image = $(this).css('background-image');
          active.find('.nail').css('background-image', image);
        }
    });

 });
